{% extends 'base.html.twig' %}

{% block title %}{{ club.name }}{% endblock %}

{% block body %}
<body style="background-image: url({{ bg }});
                background-position: center;
                background-repeat: no-repeat;
                background-size: cover;">

    <nav class="navbar navbar-light bg-light">
        <div class="container-fluid">
            <a class="navbar-brand" href="{{ path('app_club_index') }}">Back</a>
            <h1>Details</h1>
        </div>
    </nav><br>

    <div class="d-flex flex-column bd-highlight mb-3">
        <div class="p-2 bd-highlight">
            <img width='10%' src="{{ club.logo }}"/>
        </div>
        <div class="p-2 bd-highlight">
            Name: {{ club.name }}
        </div>
        <div class="p-2 bd-highlight">
            City: {{ club.city }}
        </div>
        <div class="p-2 bd-highlight">
            Country: {{ club.country }}
        </div>
        <div class="p-2 bd-highlight">
            Number of participated tournaments: {{ club.totalTournaments }}
        </div>
        <div class="p-2 bd-highlight">
            Number of won tournaments: {{ club.wonTournaments }}
        </div>
        <div class="p-2 bd-highlight">
            Number of wins: {{ club.totalWins }}
        </div>
        <div class="p-2 bd-highlight">
            Number of loses: {{ club.totalLoses }}
        </div>
        <div class="p-2 bd-highlight">
            Number of draws: {{ club.totalDraws }}
        </div>
        <div class="p-2 bd-highlight d-flex justify-content-left">
            <a class="btn btn-warning" href="{{ path('app_club_edit', {'id': club.id}) }}">Edit</a>
            {{ include('club/_delete_form.html.twig') }}
        </div>
    </div>
</body>
{% endblock %}
