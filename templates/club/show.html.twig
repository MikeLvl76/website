{% extends 'base.html.twig' %}

{% block title %}{{ club.name }}{% endblock %}

{% block body %}
<body style="background-image: 
                url('https://us.123rf.com/450wm/cluckva/cluckva1404/cluckva140400009/27319727-stock-vector-gray-gradient-abstract-background-with-space-for-your-text-and-picture-.jpg?ver=6');
                background-position: center;
                background-repeat: no-repeat;
                background-size: cover;">

    <nav class="navbar navbar-light bg-light">
        <div class="container-fluid">
            <a class="navbar-brand" href="{{ path('app_club_index') }}">Back</a>
            <h1>Details</h1>
        </div>
    </nav><br>

    <div class="d-flex flex-column bd-highlight mb-3">
        <div class="p-2 bd-highlight">
            <img width='10%' src="{{ club.logo }}"/>
        </div>
        <div class="p-2 bd-highlight">
            {{ club.name }}
        </div>
        <div class="p-2 bd-highlight">
            {{ club.city }}
        </div>
        <div class="p-2 bd-highlight">
            {{ club.country }}
        </div>
        <div class="p-2 bd-highlight d-flex justify-content-left">
            <a class="btn btn-warning" href="{{ path('app_club_edit', {'id': club.id}) }}">Edit</a>
            {{ include('club/_delete_form.html.twig') }}
        </div>
    </div>
</body>
{% endblock %}
