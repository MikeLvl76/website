{% extends 'base.html.twig' %}

{% block title %}{{ national.name }}{% endblock %}

{% block body %}
<body style="background-image: url({{ bg }});
                background-position: center;
                background-repeat: no-repeat;
                background-size: cover;">

    <nav class="navbar navbar-light bg-light">
        <div class="container-fluid">
            <a class="navbar-brand" href="{{ path('app_national_index') }}">Back</a>
            <h1>Details</h1>
        </div>
    </nav><br>

    <div class="d-flex flex-column bd-highlight mb-3">
        <div class="p-2 bd-highlight">
            <img width='10%' src="{{ national.flag }}"/>
        </div>
        <div class="p-2 bd-highlight">
            {{ national.name }}
        </div>
        <div class="p-2 bd-highlight">
            {{ national.country }}
        </div>
        <div class="p-2 bd-highlight d-flex justify-content-left">
            <a class="btn btn-warning" href="{{ path('app_national_edit', {'id': national.id}) }}">Edit</a>
            {{ include('national/_delete_form.html.twig') }}
        </div>
    </div>
</body>
{% endblock %}
