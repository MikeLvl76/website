{% block title %}{{ national.name }}{% endblock %}

{% block body %}
    <h1>Details</h1>

    <table class="table">
        <tbody>
            <tr>
                <th></th>
                <td><img width='5%' src="{{ national.flag }}"/></td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ national.name }}</td>
            </tr>
            <tr>
                <th>Country</th>
